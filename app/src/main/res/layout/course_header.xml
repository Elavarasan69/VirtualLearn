<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="212dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/img_designcoursedetail1_bg"
    android:foregroundTint="#802A292E"
    android:paddingHorizontal="24dp">

    <ImageButton
        android:id="@+id/closeBtn"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/icn_close_white"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@+id/course_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Learn Figma - UI/UX Design Essential Training"
        android:textColor="@color/white"
        android:fontFamily="@font/biko_bold"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/closeBtn"
        android:layout_marginTop="20dp"
        android:lineHeight="35dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/course_title"
        android:orientation="horizontal"
        android:layout_marginTop="14dp"
        >
        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Design"
            android:gravity="center"
            android:textColor="#373737"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/yellow_filled"
            android:fontFamily="@font/proxima_nova_regular"
            android:textSize="10dp"
            android:lineHeight="12dp"/>

        <TextView
            android:id="@+id/chapter_lesson_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="7 Chapters | 46 Lessons "
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>