<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="69dp"
    android:layout_marginTop="16dp"
    app:cardBackgroundColor="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/course_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/custom_homescreen_video_background"
                android:src="@drawable/img_course3_design"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/coursetitle_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="12dp"
                    android:text="Adobe Illustrator CC - Essential Training Course"
                    android:lines="1"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    android:fontFamily="@font/proxima_nova_medium"
                    android:lineHeight="16dp"
                    android:textAlignment="viewStart"
                    android:textColor="#373737"/>

                <TextView
                    android:id="@+id/numberofchapters_tv"
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="12dp"
                    android:text="30 Chapters"
                    android:textSize="10sp"
                    android:fontFamily="@font/proxima_nova_medium"
                    android:lineHeight="12dp"
                    android:textAlignment="viewStart"
                    android:textColor="#7A7A7A"/>

                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:background="@drawable/allcourse_categories_frame_box"
                    android:text="Design"
                    android:textSize="8dp"
                    android:lineHeight="9dp"
                    android:gravity="center"
                    android:textColor="#373737"
                    android:fontFamily="@font/proxima_nova_medium"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>