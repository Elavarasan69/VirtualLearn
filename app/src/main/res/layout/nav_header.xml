<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_view"
    android:layout_width="match_parent"
    android:layout_height="178dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profilebackgroundphotoofnavigation_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_course3_design"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D9092963"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profilephotoofnavigation_iv"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="76dp"
            android:background="@color/grey"
            app:shapeAppearanceOverlay="@style/RoundedSquare"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_account_box_24" />

        <TextView
            android:id="@+id/nav_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="80dp"
            android:layout_toRightOf="@+id/profilephotoofnavigation_iv"
            android:fontFamily="@font/biko_bold"
            android:padding="2dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/nav_designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nav_user_name"
            android:layout_marginStart="19dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/profilephotoofnavigation_iv"
            android:fontFamily="@font/proxima_nova_medium"
            android:padding="2dp"
            android:text="UI/UX Designer"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>