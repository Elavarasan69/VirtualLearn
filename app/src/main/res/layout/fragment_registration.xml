<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    android:layout_marginHorizontal="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/biko_bold"
        android:text="New Account"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/proxima_nova_regular"
        android:text="Create a new account to get access to all courses by entering your mobile number."
        android:textColor="#7A7A7A"
        android:textSize="16sp" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:prefixText="+91 "
        android:textColorHint="@color/blue"
        app:hintTextColor="@color/blue"
        android:layout_marginTop="60dp"
        android:focusedByDefault="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_phone_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey"
            android:fontFamily="@font/proxima_nova_regular"
            android:foregroundTint="@color/blue"
            android:hint="Enter your mobile number"
            android:maxLength="10"
            android:textCursorDrawable="@drawable/cursor_custom"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginTop="53dp"
        android:fontFamily="@font/proxima_nova_semibold"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/custom_button_solid" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:fontFamily="@font/proxima_nova_regular"
            android:textSize="16sp"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/loginBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/proxima_nova_bold"
            android:textSize="16sp"
            android:textColor="@color/orange" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/web_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="230dp"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp">

        <Button
            android:id="@+id/btnfacebook"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/custom_web_login_background"
            android:drawableTop="@drawable/facebook_1_2x"
            android:paddingTop="15dp" />


        <Button
            android:id="@+id/btnGoogle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15.5dp"
            android:layout_weight="1"
            android:background="@drawable/custom_web_login_background"
            android:drawableTop="@drawable/google_1_2x"
            android:paddingTop="15dp" />

    </LinearLayout>
    </LinearLayout>
</ScrollView>