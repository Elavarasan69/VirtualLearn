<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.fragments.categories.CategoriesFragment">


    <ImageView
        android:id="@+id/backbtn_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingTop="30dp"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/searchbtn_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingEnd="10dp"
        android:src="@drawable/ic_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.914"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/biko_bold"
        android:text="Categories"
        android:textColor="#2B2B2B"
        android:textSize="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backbtn_iv" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/proxima_nova_regular"
        android:paddingStart="24dp"
        android:text="Please choose a topic on which you want to start a course."
        android:textAlignment="textStart"
        android:textColor="#7A7A7A"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.027">


                <LinearLayout
                    android:id="@+id/IT_business"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:background="@drawable/search_categories_frame_box"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="2dp"
                    tools:layout_editor_absoluteY="152dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="12dp"
                        android:src="@drawable/icn_categories_business" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/proxima_nova_medium"
                        android:text="Business"
                        android:textColor="#2B2B2B"
                        android:textSize="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/IT_design"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/search_categories_frame_box"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="2dp"
                    tools:layout_editor_absoluteY="152dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="15dp"
                        android:src="@drawable/icn_categories_design" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/proxima_nova_medium"
                        android:text="Design"
                        android:textColor="#2B2B2B"
                        android:textSize="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/IT_healthAndFitness"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/search_categories_frame_box"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="2dp"
                    tools:layout_editor_absoluteY="152dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="17dp"
                        android:src="@drawable/icn_categories_fitness" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/proxima_nova_medium"
                        android:text="Health &amp; Fitness"
                        android:textColor="#2B2B2B"
                        android:textSize="10dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal"

                app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                tools:layout_editor_absoluteX="16dp">

                <LinearLayout
                    android:id="@+id/IT_Software"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:background="@drawable/search_categories_frame_box"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="2dp"
                    tools:layout_editor_absoluteY="152dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="12dp"
                        android:src="@drawable/icn_categories_it" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/proxima_nova_medium"
                        android:text="IT &amp; Software"
                        android:textColor="#2B2B2B"
                        android:textSize="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/IT_marketing"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/search_categories_frame_box"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="2dp"
                    tools:layout_editor_absoluteY="152dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="17dp"
                        android:src="@drawable/icn_categories_marketing" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="7dp"
                        android:fontFamily="@font/proxima_nova_medium"
                        android:text="Marketing
"
                        android:textColor="#2B2B2B"
                        android:textSize="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/IT_music"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/search_categories_frame_box"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="2dp"
                    tools:layout_editor_absoluteY="152dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="15dp"
                        android:src="@drawable/icn_categories_music" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/proxima_nova_medium"
                        android:text="Music"
                        android:textColor="#2B2B2B"
                        android:textSize="10dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                tools:layout_editor_absoluteX="0dp">

                <LinearLayout
                    android:id="@+id/IT_teaching"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:background="@drawable/search_categories_frame_box"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="2dp"
                    tools:layout_editor_absoluteY="152dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="15dp"
                        android:src="@drawable/icn_categories_teaching" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/proxima_nova_medium"
                        android:text="Teacing"
                        android:textColor="#2B2B2B"
                        android:textSize="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/IT_webDevelopment"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="14dp"
                    android:background="@drawable/search_categories_frame_box"
                    android:orientation="vertical"
                    tools:layout_editor_absoluteX="2dp"
                    tools:layout_editor_absoluteY="152dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="12dp"
                        android:src="@drawable/icn_categories_developer" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/proxima_nova_medium"
                        android:text="Development"
                        android:textColor="#2B2B2B"
                        android:textSize="10dp" />

                </LinearLayout>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>