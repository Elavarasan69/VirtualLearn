<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.loginregister.CreateNewPasswordFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Create New Password"
            android:textSize="26sp"
            android:fontFamily="@font/biko_bold"
            android:textColor="#2B2B2B"
            android:layout_marginTop="64dp"
            android:textAlignment="viewStart"
            android:lineHeight="35dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/proxima_nova_regular"
            android:textSize="16sp"
            android:lineHeight="20dp"
            android:textAlignment="viewStart"
            android:textColor="#7A7A7A"
            android:text="Your password must have at least 6 or more characters"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="60dp"
            app:boxStrokeColor="#997A7A7A"
            android:hint="New password"
            app:boxStrokeWidth="1dp"
            app:hintTextColor="#7A7A7A">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_roman"
                android:textSize="16sp"
                android:lineHeight="22dp"
                android:textColor="#042C5C"
                android:textCursorDrawable="@drawable/cursor_custom"
                android:inputType="textPersonName"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:boxStrokeColor="#997A7A7A"
            android:hint="Confirm new password"
            app:boxStrokeWidth="1dp"
            app:hintTextColor="#7A7A7A">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/re_password_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avenir_roman"
                android:textSize="16sp"
                android:textCursorDrawable="@drawable/cursor_custom"
                android:lineHeight="22dp"
                android:textColor="#042C5C"
                android:inputType="textPersonName"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/resetPasswordBtn"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="91dp"
            android:backgroundTint="#EE5C4D"
            android:fontFamily="@font/proxima_nova_semibold"
            android:text="Reset Password"
            android:gravity="center"
            android:letterSpacing="0.0"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:cornerRadius="6dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>
