<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".ui.fragments.Search.SearchReasultNotFoundFragment">

<ImageButton
    android:id="@+id/searchback_btn"
    android:layout_width="22dp"
    android:layout_height="14dp"
    android:layout_marginTop="30dp"
    android:layout_marginStart="24dp"
    android:src="@drawable/ic_back_arrow"
    android:background="@color/white"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"/>

<TextView
    android:id="@+id/search_tv"
    android:layout_width="match_parent"
    android:layout_height="28dp"
    android:gravity="center"
    android:text="Search"
    android:fontFamily="@font/proxima_nova_semibold"
    android:textSize="20sp"
    android:textColor="#373737"
    android:lineHeight="28dp"
    android:layout_marginTop="24dp"
    app:layout_constraintStart_toEndOf="@+id/searchback_btn"
    app:layout_constraintTop_toTopOf="parent" />

<LinearLayout
    android:id="@+id/searchscreensearch_layout"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="36dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    app:layout_constraintTop_toBottomOf="@id/search_tv"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@drawable/search_box_style">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="11dp"
            android:src="@drawable/icon_search"
            android:background="@color/white"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="9dp"
            android:gravity="center_vertical"
            android:background="#00ffffff"
            android:layout_weight="1"
            android:hint="Search"/>

    </LinearLayout>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="0dp"
        android:layout_gravity="center"
        android:src="@drawable/icn_filter_search"/>
</LinearLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/searchscreensearch_layout"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:id="@+id/result_not_found_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="201dp"
            android:layout_height="228dp"
            android:layout_gravity="center"
            android:src="@drawable/img_search_no_result"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="No matching course"
            android:fontFamily="@font/proxima_nova_semibold"
            android:textColor="#2B2B2B"
            android:textSize="18sp"
            android:lineHeight="22dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:text="Try a different search or browse categories"
            android:textSize="14sp"
            android:fontFamily="@font/proxima_nova_semibold"
            android:textColor="#807A7A7A"
            android:lineHeight="17dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="60dp"
            android:text="Search from Categories"
            android:fontFamily="@font/proxima_nova_semibold"
            android:textSize="18sp"
            android:textAlignment="viewStart"
            android:textColor="#2B2B2B"
            android:lineHeight="22dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp">

            <LinearLayout
                android:layout_width="83dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@drawable/search_categories_frame_box">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/icn_categories_design"/>
                <TextView
                    android:layout_width="38dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="8dp"
                    android:text="Design"
                    android:textSize="12dp"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/proxima_nova_medium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="117dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                android:background="@drawable/search_categories_frame_box">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/icn_categories_developer"/>
                <TextView
                    android:layout_width="72dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="8dp"
                    android:text="Development"
                    android:textSize="12dp"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/proxima_nova_medium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="93dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                android:background="@drawable/search_categories_frame_box">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/icn_categories_business"/>
                <TextView
                    android:layout_width="48dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="8dp"
                    android:text="Business"
                    android:textSize="12dp"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/proxima_nova_medium"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="89dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@drawable/search_categories_frame_box">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/icn_categories_finance"/>
                <TextView
                    android:layout_width="45dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="8dp"
                    android:text="Finance"
                    android:textSize="12dp"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/proxima_nova_medium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="132dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                android:background="@drawable/search_categories_frame_box">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/icn_categories_fitness"/>
                <TextView
                    android:layout_width="88dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="8dp"
                    android:text="Health &amp; Fitness"
                    android:textSize="12dp"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/proxima_nova_medium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="76dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                android:background="@drawable/search_categories_frame_box">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/icn_categories_music"/>
                <TextView
                    android:layout_width="35dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="8dp"
                    android:text="Music"
                    android:textSize="12dp"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/proxima_nova_medium"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="117dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                android:background="@drawable/search_categories_frame_box">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/icn_categories_it"/>
                <TextView
                    android:layout_width="73dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="8dp"
                    android:text="IT &amp; Software"
                    android:textSize="12dp"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/proxima_nova_medium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="99dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                android:background="@drawable/search_categories_frame_box">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/icn_categories_marketing"/>
                <TextView
                    android:layout_width="54dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="8dp"
                    android:text="Marketing"
                    android:textSize="12dp"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/proxima_nova_medium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="89dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                android:background="@drawable/search_categories_frame_box">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/icn_categories_lifestyle"/>
                <TextView
                    android:layout_width="44dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="8dp"
                    android:text="Lifestyle"
                    android:textSize="12dp"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/proxima_nova_medium"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="114dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@drawable/search_categories_frame_box">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/icn_categories_photography"/>
                <TextView
                    android:layout_width="69dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="8dp"
                    android:text="Photography"
                    android:textSize="12dp"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/proxima_nova_medium"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="95dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                android:background="@drawable/search_categories_frame_box">
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/icn_categories_teaching"/>
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="15dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="8dp"
                    android:text="Teaching"
                    android:textSize="12dp"
                    android:textColor="#2B2B2B"
                    android:fontFamily="@font/proxima_nova_medium"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>